{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "composite": true,
    "declaration": true,
    "types": ["react", "jest"],
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css"]
      }
    ],
    "paths": {
      "@": ["src"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@configs/*": ["src/configs/*"],
      "@contexts/*": ["src/contexts/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.spec.js",
    "src/**/*.json",
    "@types/*",
    "utils/**/*"
    // "jest.setup.ts"
  ]
}
